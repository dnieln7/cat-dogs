<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CatDogs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark21</item>
        <item name="colorPrimaryVariant">@color/dark12</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/dark32</item>

        <item name="background">@color/dark21</item>
        <item name="android:textColor">@color/textOnDarkPrimary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CatDogs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Custom-->

    <style name="Theme.CatDogs.Tag" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/primaryLight</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.CatDogs.Tag.Text" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="Theme.CatDogs.Progress" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/secondaryLight</item>
    </style>

    <style name="Theme.CatDogs.Icon">
        <item name="tint">@color/primaryLight</item>
    </style>

    <style name="Theme.CatDogs.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textOnDarkPrimary</item>
    </style>

    <style name="Theme.CatDogs.Legend" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primaryLight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">@color/primaryLight</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Theme.CatDogs.Icon.Disabled">
        <item name="tint">@color/textOnDarkDisabled</item>
    </style>

    <style name="Theme.CatDogs.Subtitle.Disabled">
        <item name="android:textColor">@color/textOnDarkDisabled</item>
    </style>
</resources>